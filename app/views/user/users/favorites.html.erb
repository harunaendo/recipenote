<div class='main-container'>
	<div class='row'>
	  <div class='col-9 mt-4 ml-4 mb-4'>
      <p><%= @user.name %>のいいね一覧</p>
        <% @favorite_recipes.each do |recipe|%>
         <ul class=left-item>
            <p>
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, size: "200x200" %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "200x200" %>
              <% end %>
            </p>
         </ul>
         <ul class=rigth-item>
               <h4><%= link_to recipe.title, user_recipe_path(recipe.id) %></h4>
               <p><%=  image_tag recipe.user.get_profile_image(50,50) %> <%= link_to recipe.user.name, user_user_path(recipe.user.id) %></p>
         </ul>
        <% end %>
          <nav class='paginate'>
             <%= paginate @favorites %>
          </nav>
     </div>
    <div class='col-2 mt-4'>
      <div class='row'>
        <div class='col-12'>
          <%= render 'user/users/profile', user: @user %>
        </div>
      </div>
      <div class='row'>
        <div class='col-12 mt-15'>
          <%= render "user/searches/search" %>
        </div>
      </div>
    </div>
  </div>
</div>
