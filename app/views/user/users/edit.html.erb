<div class='main-container'>
	<div class='row'>
	  <div class='mx-auto mt-4 mb-4' style='width: 200px;' >
      <%= form_with model: @user, url: user_user_path, method: :patch do |f| %>

        <label for="inputName">名前</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        <label for="inputImage">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <%= f.submit "変更を保存" %>
        <%= link_to "退会する",  user_user_check_path(@user), class: "btn btn-danger" %>

      <% end %>
    </div>
  </div>
</div>