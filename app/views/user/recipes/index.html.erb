<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-8 offset-md-1 mt-4'>
      <p>レシピ一覧</p>
        <% @recipes.each do |recipe| %>
          <p></p>
          <% if recipe.image.attached? %>
            <%= image_tag recipe.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>

          <%=  image_tag recipe.user.get_profile_image(50,50) %> <!--リンク追加する-->
          　<td><%= link_to recipe.title, user_recipe_path(recipe.id) %></td>
        　<% end %>
    </div>

    <div class='col-md-3 mt-4'>
      <%= render 'user/users/profile', user: @user %>
    </div>
  </div>
</div>