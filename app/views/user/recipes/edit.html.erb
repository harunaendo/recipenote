<div class='main-container'>
	<div class='row'>
	  <div class='mx-auto mt-4 mb-4' style='width: 200px;' >

        <%= render 'user/shared/error_messages' %>

        <%= form_with model: @recipe, url: user_recipe_path(@recipe.id), method: :patch do |f| %>
          <h4>料理名</h4>
          <%= f.text_field :title %>

          <h4>レシピ</h4>
          <%= f.text_area :body %>

          <%= f.submit '保存' %>
          <%= link_to "削除", user_recipe_path(@recipe.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %>

        <% end %>
    </div>
  </div>
</div>