
<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <head>
         <%= stylesheet_link_tag 'user/homes', media: 'all', 'data-turbolinks-track': 'reload' %>
      </head>
            <!--%= image_tag "vegetables-assortment-wooden-background-with-empty-clipboard.jpg", size:"800x400" %-->
    </div>

    <div class="col-lg-7">
        </br>
        <h2>新規会員登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "user/shared/error_user", resource: resource %>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認用%><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "登録" %>
          </div>
        <% end %>

    </div>