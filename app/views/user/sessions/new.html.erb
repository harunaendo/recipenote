<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <head>
         <%= stylesheet_link_tag 'user/homes', media: 'all', 'data-turbolinks-track': 'reload' %>
      </head>
            <!--%= image_tag "vegetables-assortment-wooden-background-with-empty-clipboard.jpg", size:"800x400" %-->
    </div>
    <div class="col-lg-7">
        </br>
        <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :覚えておく %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

