  <h4><span style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;"><%= @user.name %>さんの会員情報編集</span></h4>

  <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
  <div class="row mb-1 mt-5">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">名前</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :name, value: @user.name, autofocus: true, class: "form-control form-control-sm mr-3", placeholder: "名前" %>
        </div>
      </div>
  </div>

  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">メールアドレス</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.email_field :email, value: @user.email, autofocus: true, class: "form-control form-control-sm mr-3" %>
        </div>
      </div>
  </div>

  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">会員ステータス</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true} %>
    　       <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false} %>
　　　　</div>
      </div>
  </div>

  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        </div>
      </div>
  </div>
  <% end %>
