/* home/topページの画像 */
.main-container {
  position: relative;
  width: 600px;
  height: 800px;
  background-image: url('<%= asset_path("assortment-different-delicious-ingredients.jpg") %>'); /* 背景画像のパスを指定 */
  background-size: cover;
  background-repeat: no-repeat; /* 画像の繰り返しを防ぐ */
  overflow: hidden; /* オーバーフローを隠す */
  border-radius: 15px; /* 角を丸くする */
}
